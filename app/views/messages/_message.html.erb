<div class='message'>
  <% if message.user == current_user %>
    <div class="outgoing_msg">
      <div class="sent_msg">
        <p><%= "#{message.content}" %></p>
        <span class="time_date"> <%= l(message.created_at, format: :long) %></span>
      </div>
    </div>
  <% else %>
    <div class="incoming_msg_img"> <img src="/human_image.jpeg"> </div>
    <div class="received_msg">
      <div class="received_withd_msg">
        <p><%= "#{message.content}" %></p>
        <span class="time_date"> <%= l(message.created_at, format: :long) %></span>
      </div>
    </div>
  <% end %>
</div>
