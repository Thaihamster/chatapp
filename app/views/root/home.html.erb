<% provide(:title, 'ホーム') %>
<div class="jumbotron jumbotron-extend">
  <div class="container-fluid jumbotron-container">
    <div class="app-name">
      <h1>CHATAPP!</h1>
    </div>
    <div class="app-description">
      <h3>プライベートなトーク空間を</h3>
      <button class="btn btn-home btn-xs">
      <% if user_signed_in? %>
        <%= link_to rooms_path do %>
          <h4 style="font-weight: bold;">はじめる</h4>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path do %>
          <h4 style="font-weight: bold;">はじめる</h4>
        <% end %>
      <% end %>
      </button>
    </div>
  </div>
</div>
